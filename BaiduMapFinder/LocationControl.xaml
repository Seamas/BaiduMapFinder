<UserControl x:Class="BaiduMapFinder.LocationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaiduMapFinder"
             mc:Ignorable="d" 
             d:DesignHeight="37" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Label Content="经度:" Margin="10 0 0 0 " VerticalAlignment="Center"/>
        <TextBox Margin="10 0 0 0" MinWidth="60" Text="{Binding Lng, Mode=TwoWay}" VerticalAlignment="Center"/>
        <Label Content="纬度:" Margin="10 0 0 0 " VerticalAlignment="Center"/>
        <TextBox  Margin="10 0 0 0 " MinWidth="60" Text="{Binding Lat, Mode=TwoWay}" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
